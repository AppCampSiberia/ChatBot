<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.appcampsiberia.chatbot.Settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonZima"
        android:layout_below="@+id/buttonColor"
        android:layout_alignLeft="@+id/buttonColor"
        android:layout_alignStart="@+id/buttonColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonNeon"
        android:layout_above="@+id/buttonSpace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonColor"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonSpace"
        android:layout_above="@+id/buttonColor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonStandart"
        android:layout_below="@+id/buttonZima"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Неон"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#15FF00"
        android:layout_alignBottom="@+id/buttonNeon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Космос"
        android:id="@+id/textView8"
        android:layout_above="@+id/buttonColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Розовый"
        android:id="@+id/textView9"
        android:layout_above="@+id/buttonZima"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:textColor="#FF7F7F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/buttonZima"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Зима"
        android:background="#A5B4FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стандарт"
        android:id="@+id/textView11"
        android:background="#cfffaf"
        android:layout_alignBottom="@+id/buttonStandart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
