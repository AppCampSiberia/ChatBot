<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.appcampsiberia.chatbot.Settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonNeon"
        android:layout_marginBottom="42dp"
        android:textSize="22dp"
        android:layout_above="@+id/buttonSpace"
        android:layout_alignLeft="@+id/buttonSpace"
        android:layout_alignStart="@+id/buttonSpace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonSpace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вкл"
        android:id="@+id/buttonStandart"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonNeon"
        android:layout_alignStart="@+id/buttonNeon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Неон"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#15FF00"
        android:layout_alignBottom="@+id/buttonNeon"
        android:textSize="26dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Космос"
        android:id="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="26dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стандарт"
        android:id="@+id/textView11"
        android:background="#cfffaf"
        android:layout_alignBottom="@+id/buttonStandart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingRight="7dp"
        android:paddingBottom="5dp" />

</RelativeLayout>
